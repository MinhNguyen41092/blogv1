<div class="row">
  <div class="col-md-12 col-md-offset-0">
    <% @article.comments.order('created_at DESC').each do |comment| %>
      <% if comment.created_at %>
        <ol>
          <li>
            <h5><strong><%= comment.user.username %></strong> (<small><%= time_ago_in_words(comment.created_at) %> ago</small> ) <br /> <%= comment.comment %></h5>
            <% if current_user.admin %>
              <%= link_to [comment.article, comment], method: :delete, data: { confirm: "Are you sure?" } do %>
                <button type="button" class="close" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              <% end %>
            <% end %>
          </li>
        </ol>
      <% end %>
    <% end %>
  </div>
</div>
